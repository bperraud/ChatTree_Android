<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.chattree.chattree">

    <!-- To auto-complete the email thread field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <!-- Network permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- location permission -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- Sync permissions -->
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <application
            android:name="ChatTreeApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <!-- LOGIN ACTIVITY -->
        <activity
                android:name=".login.LoginActivity"
                android:configChanges="orientation|keyboardHidden"
                android:label="@string/app_name"
                android:noHistory="true"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- HOME ACTIVITY -->
        <activity
                android:name=".home.HomeActivity"
                android:configChanges="orientation|keyboardHidden"
                android:screenOrientation="portrait">
        </activity>

        <!-- PROFILE ACTIVITY -->
        <activity android:name=".profile.ProfileActivity"/>

        <!-- CONVERSATION ACTIVITY -->
        <activity
                android:name=".home.conversation.ConversationActivity"
                android:configChanges="orientation|keyboardHidden"
                android:screenOrientation="portrait"
                android:parentActivityName=".home.HomeActivity"
                android:windowSoftInputMode="adjustResize">
        </activity>

        <service
                android:name="com.chattree.chattree.datasync.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator"/>
            </intent-filter>
            <meta-data
                    android:name="android.accounts.AccountAuthenticator"
                    android:resource="@xml/authenticator"/>
        </service>

        <provider
                android:name="com.chattree.chattree.datasync.AppContentProvider"
                android:authorities="com.chattree.chattree.provider"
                android:exported="false"
                android:syncable="true"/>

        <service
                android:name="com.chattree.chattree.datasync.SyncService"
                android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter"/>
            </intent-filter>
            <meta-data android:name="android.content.SyncAdapter"
                       android:resource="@xml/syncadapter"/>
        </service>

        <!-- WEBSOCKET SERVICE -->
        <service android:name=".websocket.WebSocketService"
                 android:exported="false"/>

    </application>

</manifest>