<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="8dp" android:gravity="center_vertical"
              android:paddingTop="16dp" android:paddingBottom="16dp"
              android:descendantFocusability="blocksDescendants">

    <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/checkbox_contact_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

    <ImageView android:id="@+id/contactAvatar"
               android:layout_width="48dp"
               android:layout_height="48dp"
               android:src="@drawable/ic_account_circle_black_24dp"
               android:contentDescription="@string/contactPicture"
               android:scaleType="centerCrop" android:layout_marginEnd="8dp"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView
                android:id="@+id/contactPseudoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Headline" android:textSize="18sp"/>

        <TextView
                android:id="@+id/contactEmailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>